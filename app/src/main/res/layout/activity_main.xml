<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:background="@drawable/official_logo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bd_card"
        android:orientation="vertical"
        android:padding="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

            <Button
                android:id="@+id/student"
                android:layout_width="match_parent"
               android:layout_height="wrap_content"
                android:text="@string/student_panel"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgbtn_home" />

            <Button
                android:textAllCaps="false"
                android:id="@+id/others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guest"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgbtn_home" />

        <TextView
            android:id="@+id/admin"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF6B00"
            android:focusable="true"
            android:text="@string/admin_message"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>